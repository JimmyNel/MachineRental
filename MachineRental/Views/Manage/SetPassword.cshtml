@model MachineRental.ViewModels.SetPasswordViewModel
@{
    ViewBag.Title = "Définissez votre mot de passe";
}

@*<h2>@ViewBag.Title.</h2>*@
@*<p class="text-info">
    Vous n'avez aucun nom d'utilisateur/mot de passe local pour ce site. Ajoutez un compte local
    pour pouvoir vous connecter sans connexion externe.
</p>*@

<div class="row">
    <div class="center-block col-md-4" style="float:none">
        <p class="validation-summary-errors">@ViewBag.StatusMessage</p>
        @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <h2>Définissez votre mot de passe</h2>
            <hr />
            @Html.ValidationSummary("", new { @class = "validation-summary-errors" })
            <div class="form-group pmd-textfield pmd-textfield-floating-label">
                @Html.LabelFor(m => m.NewPassword, new { @class = "control-label pmd-input-group-label" })
                <div class="input-group">
                    <div class="input-group-addon"><i class="material-icons md-dark pmd-sm">lock</i></div>
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group pmd-textfield pmd-textfield-floating-label">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label pmd-input-group-label" })
                <div class="input-group">
                    <div class="input-group-addon"><i class="material-icons md-dark pmd-sm">lock</i></div>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <br />
            @Html.HiddenFor(m => m.UserEmail, new { value = @ViewBag.UserEmail })
            @*@Html.LabelFor(m => m.UserEmail, new { value = @ViewBag.UserEmail })*@
            <div class="form-group">
                <div class="text-center text-md-left">
                    <input type="submit" value="Définir le mot de passe" class="btn btn-primary pmd-ripple-effect pmd-btn-raised" />
                </div>
            </div>
        }
    </div>
</div>
        

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
